@using OgrenciBilgiSistemi.Models
@model List<Ogrenci>
@{
    ViewBag.Title = "IndexOgrenci";
    Layout = "~/Views/Shared/_Layout.cshtml";



}
<style>
    .ozluluk-container {
        border: 1px solid #ccc;
        padding: 10px;
        margin-bottom: 20px;
    }

        .ozluluk-container h2 {
            margin-bottom: 10px;
        }

        .ozluluk-container h3 {
            margin-top: 20px;
        }
</style>

<h2>Öğrenci Özlülük Bilgileri</h2>

@foreach (var item in Model)
{
    if (Int32.Parse(item.OgrenciNo) == Convert.ToInt32(Session["OgrenciNo"]))
    {
        <div class="row">
            <div class="col-md-12">
                <div class="ozluluk-container">
                    <h3>Kimlik Bilgileri</h3>

                    <p><strong>Ad Soyad:</strong> @item.Adi @item.Soyadi</p>
                    <p><strong>TC Kimlik No:</strong> @item.TCKimlikNo</p>
                    <p><strong>Doğum Tarihi:</strong> @item.DogumTarihi.ToShortDateString()</p>
                    <button class="btn btn-primary" onclick="DuzenleKimlikBilgileri()">Düzenle</button>
                </div>
            </div>

            <div class="col-md-12">
                <div class="ozluluk-container">
                    <h3>Kurumsal Bilgiler</h3>
                    <p><strong>Bölüm:</strong> @item.Bolum.BolumAdi</p>
                    <p><strong>Kurum Sicil No:</strong> </p>
                    <p><strong>Unvan:</strong> </p>

                </div>
            </div>
        </div>
    }
}


