@model OgrenciBilgiSistemi.Models.Ogrenci
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using(Html.BeginForm("Ekle","KullaniciBilgi",FormMethod.Post))
            {
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">

                            <div class="form-group">
                                <label>Ögrenci No</label>
                                <input type="text" name="Ad" class="form-control" />
                            </div>
                            <div class="form-group">
                              @Html.Label("Durum", new {@class = "control-label col-md-2"})
                              @Html.EditorFor(x => x.Durumu)
                            </div>
                            <div class="form-group">
                                <label>Kayıt Tarihi</label>
                                <input type="text" name="Ad" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Ayrılma Tarihi</label>
                                <input type="text" name="Ad" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Adı</label>
                                <input type="text" name="Ad" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Soyadı</label>
                                <input type="text" name="Ad" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>TC Kimlik No</label>
                                <input type="text" name="Ad" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Cinsiye</label>
                                <input type="text" name="Ad" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Doğum Tarihi</label>
                                <input type="text" name="Ad" class="form-control" />
                            </div>
                            <button class="btn btn-primary" type="submit">Ekle</button>
                            <a href="/KullaniciBilgi/Index">Öğrenci Listesi</a>

                        </div>
                    </div>
                </div>
            }

